<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Mis estrenos"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/sand"
        android:textColor="#d84315"
        android:gravity="center"/>
    <View
        android:layout_width="300dp"
        android:layout_height="6dp"
        android:layout_gravity="center"
        android:background="#d84315" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/fondo_custom"
            android:orientation="horizontal"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/imgvRegistrar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/registrar"
                android:contentDescription="Registrar datos"/>

            <TextView
                android:id="@+id/txtRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Realizar registro"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/sand"
                android:textColor="#d84315"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/fondo_custom"
            android:orientation="horizontal"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/imgvConsultar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/consultar"
                android:contentDescription="Registrar datos"/>

            <TextView
                android:id="@+id/txtConsultar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:text="Consultar estrenos"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/sand"
                android:textColor="#d84315"
                android:textAlignment="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>